{
  "name": "Cowboy Bebop智能格式",
  "pattern": "(.+?)\\s*(\\d+)(?:\\s+(.+?))?\\s*(\\[.*?\\])",
  "groups": {
    "series": 1,
    "episode": 2,
    "title": 3,
    "tech_info": 4
  },
  "output_format": "{series} S01E{episode:0>2} - {title} {tech_info}",
  "special_handling": {
    "year_pattern": "\\b(19|20)\\d{2}\\b",
    "max_episode": 100
  }
}
