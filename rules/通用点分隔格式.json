{
  "name": "通用点分隔格式",
  "pattern": "(.+?)\\.E(\\d+)\\.(\\d{4})\\.(.+?)\\.(.+?)\\.(.+?)\\.(.+?)\\.(.+)",
  "groups": {
    "series": 1,
    "episode": 2,
    "year": 3,
    "resolution": 4,
    "source": 5,
    "video_codec": 6,
    "audio_codec": 7,
    "extension": 8
  },
  "output_format": "{series} S01E{episode:0>2} - ({year}) [{resolution}] [{source}] [{video_codec}] [{audio_codec}]",
  "special_handling": {
    "year_pattern": "(19|20)\\d{2}",
    "max_episode": 999,
    "preserve_full_extension": true
  }
}
